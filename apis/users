function getUserName()
if not fs.exists("users/.cu") then return false end
local file = fs.open("/users/.cu","r")
local cu = file.readLine()
file.close()
return cu
end
function login(name)
  local file = fs.open("/users/.cu","w")
file.write(name)
file.close()
return true
end
function logOut()
fs.delete("user/.cu")
end
function getUsers()
local userlist=fs.list("users/set/")
return userlist
end
function newUser(name,password)
if fs.exists("users/set/"..name) then
return false
end
fs.makeDir("users/set/"..name)
local file = fs.open("users/set/"..name.."/.pass","w")
file.write(password)
file.close()
fs.makeDir("users/files/"..name)
return true
end
function getPassword(name)
local file2 = fs.open("users/set/"..name.."/.pass","r")
local pass = file2.readLine()
file2.close()
return pass
end
function changePass(name,newpass)
if not fs.exists("users/set/"..name.."/.pass") then
return false
end
local file = fs.open("users/set/"..name.."/.pass","w")
file.write(newpass)
file.close()
return true
end
function deleteUser(name)
if not fs.exists("users/set/"..name) then
return false
end
fs.delete("users/set/"..name)
fs.delete("users/files/"..name)
return true
end
function changeName(oldname,newname)
if not fs.exists("users/set/"..oldname) then
return false
end
if fs.exists("users/set/"..newname) then
return false
end
fs.move("users/set/"..oldname,"users/set/"..newname)
fs.move('users/files/'..oldname,'users/files/'..newname)
return true
end
function isUser(name)
if fs.exists("users/set/"..name) then
return true
else
return false
end
end
function getFiles(name)
if not fs.exists("users/files/"..name) then
return false
end
local list = fs.list("users/files/"..name.."/")
return list
end
function clearFiles(name)
if not fs.exists("users/files/"..name) then
return false
end
local list = fs.list("users/files/"..name.."/")
for k,v in pairs(list) do
fs.delete("users/files/"..name.."/"..v)
end
return true
end
function getFile(name,filename)
if not fs.exists('users/files/'..name..'/'..filename) then
return false
end
local file = fs.open("users/set/"..name.."/"..filename, "r")
local cont = file.readAll()
file.close()
return cont
end


function getUserSetting(user, name)
 local set = fs.open("/user/set/"..user.."/"..name, "r")
 local v = set.readAll()
 set.close()
 return v
end



function setUserSetting(user, name, value)
 local set = fs.open("/users/set/"..user.."/"..name, "w")
 set.write(value)
 set.close()
end





